{
	"compilerOptions": {
		"jsx": "react",
    "lib": ["es6", "dom"],
    "rootDir": ".",
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strict": true,
		"esModuleInterop": true,
		"baseUrl": "./",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
